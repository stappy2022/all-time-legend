<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<!--  로플리 로고 이미지 -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="55dp"
        android:alpha="0.3"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

<!--    로그인 글자 표현-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:text="로그인"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    아이디 입력 창-->
    <EditText
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:ems="14"
        android:hint="아이디"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<!--    비밀번호 입력 창-->
    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="14"
        android:hint="비밀번호"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_id" />

<!--    아이디 저장 버튼 (임시적으로 버튼 생성, 추후 체크박스로 할 예정-->
    <Button
        android:id="@+id/button2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="40dp"
        android:background="@color/NoColor"
        android:text="아이디 저장"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnGoLogActivity"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw"
        app:layout_constraintVertical_bias="0.0" />

<!--    자동 로그인 버튼 (임시적으로 버튼 생성, 추후 체크박스로 할 예정-->
    <Button
        android:id="@+id/button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="177dp"
        android:layout_marginBottom="40dp"
        android:background="@color/NoColor"
        android:text="자동 로그인"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btnGoLogActivity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/edit_pw"
        app:layout_constraintVertical_bias="0.0" />

<!--    SubActivity로 가는 버튼(상관 없음, 지울 예정)-->
    <Button
        android:id="@+id/btnGoSubActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to SubActivity"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

<!--    로그인 버튼-->
    <Button
        android:id="@+id/btnGoLogActivity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="232dp"
        android:background="@drawable/round_button_login"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

<!--    비밀번호 찾기 페이지로 넘어가는 버튼-->
    <Button
        android:id="@+id/btnGoFindPwActivity"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_button"
        android:text="비밀번호\n찾기"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

<!--    회원가입 페이지로 넘어가는 버튼-->
    <Button
        android:id="@+id/btnGoRegActivity"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_button"
        android:text="회원가입"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.828"
        app:layout_constraintStart_toStartOf="parent" />

<!--    아이디 찾기 페이지로 넘어가는 버튼-->
    <Button
        android:id="@+id/btnGoFindIdActivity"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="160dp"
        android:background="@drawable/round_button"
        android:text="아이디\n찾기"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>